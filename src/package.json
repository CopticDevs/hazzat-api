{
  "name": "hazzat-api",
  "version": "1.0.0",
  "private": true,
  "scripts": {
    "prebuild": "tslint -c tslint.json -p tsconfig.json",
    "copy:prod": "mkdirp ./dist/Configs && copyfiles -f Configs/prod.json ./dist/Configs/",
    "copy:dev": "mkdirp ./dist/Configs && copyfiles -f Configs/dev.json ./dist/Configs/",
    "prereq": "npm run init && npm run copy:prod",
    "build": "npm run prereq && tsc -p tsconfig.json",
    "build-trace": "npm run prereq && tsc -p tsconfig.json --diagnostics --listFiles --listEmittedFiles --traceResolution",
    "prestart": "npm run build",
    "start": "node ./dist/app",
    "init": "npm install --no-color --no-optional",
    "test": "mocha --reporter mocha-trx-reporter --reporter-options output=testResults.trx --timeout 20000 -r ts-node/register ./test/*.spec.ts"
  },
  "description": "hazzat-api",
  "author": {
    "name": "Fady H. Wahba"
  },
  "dependencies": {
    "diagnostics": "^2.0.2",
    "express": "^4.17.1",
    "inversify": "^5.0.5",
    "mssql": "^6.3.1",
    "nconf": "^0.11.2",
    "q": "^1.5.1",
    "reflect-metadata": "^0.1.13",
    "tedious": "^11.0.3",
    "winston": "^3.3.3"
  },
  "devDependencies": {
    "@types/express": "^4.17.11",
    "@types/mime": "^2.0.3",
    "@types/mocha": "^8.2.0",
    "@types/mssql": "^6.0.7",
    "@types/nconf": "^0.10.0",
    "@types/node": "^14.14.25",
    "@types/q": "^1.5.4",
    "chai": "^4.3.0",
    "chai-http": "^4.3.0",
    "copyfiles": "^2.4.1",
    "mkdirp": "^1.0.4",
    "mocha": "^8.2.1",
    "mocha-trx-reporter": "^3.3.1",
    "swagger-jsdoc": "^4.0.0",
    "swagger-ui-express": "^4.1.4",
    "ts-node": "^9.1.1",
    "tslint": "^6.1.3",
    "typescript": "^4.1.3"
  },
  "engines": {
    "node": "^8.0.0"
  }
}
